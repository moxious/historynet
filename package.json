{
  "name": "historynet",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Interactive visualization tool for exploring historical social networks",
  "scripts": {
    "dev": "vite",
    "start": "vercel dev",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "preview": "vite preview",
    "validate:datasets": "npx tsx scripts/validate-datasets/index.ts",
    "validate:datasets:strict": "npx tsx scripts/validate-datasets/index.ts --strict"
  },
  "dependencies": {
    "@vercel/og": "^1.0.0",
    "d3": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.12.0",
    "wikipedia": "^2.4.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/d3": "^7.4.3",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vercel/node": "^5.5.23",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  }
}
